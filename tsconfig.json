{
  "extends": "./tsconfig.fastify.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node"
  },

  "include": ["./src/**/*.ts"],
